<%# coding: utf-8 %>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="author" content="Denis Medik">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	
	<link rel="stylesheet" href="./css/main.css">

	<title>Записная книжка</title>

</head>
<body>
<h1 >Записная книжка: учебный проект на Ruby</h1>
<hr>
<form>
	<ul>
	   <li>
	   	  <div class="search">
	   	  	<input type="search" name="name">
 			<input type="submit" value="get"  formmethod="get" formaction="./get">
	   	  </div>
	   </li>
	   <li><button type="submit" name="command" value="dump" formmethod="post" formaction="./dump">dump</button></li>
	</ul>
</form>

<br>
<table>
	<thead align="center" valign="middle" bgcolor="#e5e5e5">
        <th>Имя</th> <th>Данные</th> <th>Комманды</th>
    </thead>
    <tbody>
	    <% $pb.each do |record| %>
		    <form method="post" accept-charset="utf-8">
		    <tr>
		       <td><input type="hidden" name="name" value="<%=record[0] %>"><%=record[0] %></td> 
		       <td><input type="text" name="data" value="<%=record[1] %>"></td> 
		       <td>
		       	<button name="command" value="set" formaction="./set">set</button>
		       	<button name="command" value="del" formaction="./del">del</button>
		       </td>
		    </tr>
		    </form>
		<% end %>
		<form method="post" accept-charset="utf-8">
		<tr>
			<td><input type="text" name="name" value=""></td> 
			<td><input type="text" name="data" value=""></td> 
			<td><button name="command" value="add" formaction="./add">add</button></td>
		</tr>
		</form>
	</tbody>
</table>
</body>
</html>